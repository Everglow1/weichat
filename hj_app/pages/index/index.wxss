.wrapper .group {
  background: #fff;
  /* rpx 小程序的创新 750px 设计稿
  简单 iPhone8 小程序做自动转化 适配 */
  margin-bottom: 16rpx;
  padding: 0 36rpx 10rpx 36rpx;
}
.wrapper .group-bar {
  height: 114rpx;
  text-align: center;
}
/* 加空格是子元素，不加都定义 */
.wrapper .group-title {
  position: relative;
  display: inline-block;
  padding: 0 12rpx;
  line-height: 40rpx;
  border-radius: 4rpx;
  border:1px solid #e0e0e2;
  font-size: 28rpx;
  color: #ccc;
  margin-top: 38rpx;
  overflow: visible;
}
.wrapper .group-title:after,
.wrapper .group-title:before {
content: '';
position: absolute;/*绝对定位 子*/
width: 32rpx;
height: 1rpx;
border-bottom: 1px solid #efefef;
top:18rpx;
}
/* 简单的东西用伪元素做 */
.wrapper .group-title:before {
  left:-56rpx;
  /* border: 1px solid #ffc60e; */
}
.wrapper .group-title:after {
  right:-56rpx;
  /* border: 1px solid #ffc60e; */
}
.wrapper .group-title.on {
  border: 1px solid #ffc60e;
  color:#ffc60e;
}
.wrapper .group-title.on:before,
.wrapper .group-title.on:after {
  border-bottom-color: #ffc60e;
}
.wrapper .group-content-item {
  position: relative;/*相对定位 父*/
  width: 100%;
  height: 194rpx;
  margin-bottom: 28rpx;
  /* font-weight: 500;
  height: 156rpx;
  line-height: 52rpx;
  margin-right: 300rpx;
  margin-top: 8rpx;
  overflow: hidden;
  color:#333; */
}
.wrapper .group-content-item-img {
  position: absolute;
  right: 0;
  top:0;
  width: 260rpx;
  height: 194rpx;
}
.wrapper .group-content-item-desc {
  font-size: 36rpx;
  font-weight: 500;
  height: 156rpx;
  line-height: 52rpx;
  margin-right: 300rpx;
  margin-top: 8rpx;
  overflow: hidden;
  color:#333;
}
